@model BusinessLogicLayer.DTOs.Admin.SemesterDto
@{
    Layout = "_Layout";
    ViewData["Title"] = "Chỉnh sửa Học Kỳ";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Chỉnh sửa Học Kỳ</h4>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }

                <form asp-action="Edit" asp-controller="Semester" method="post">
                    <input type="hidden" asp-for="SemesterId" />

                    <div class="mb-3">
                        <label class="form-label">Tên học kỳ</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ngày bắt đầu</label>
                        <input asp-for="StartDate" type="date" class="form-control" id="StartDate" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ngày kết thúc</label>
                        <input asp-for="EndDate" type="date" class="form-control" id="EndDate" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="mdi mdi-pencil"></i> Cập nhật
                    </button>
                    <a asp-action="Index" asp-controller="Semester" class="btn btn-outline-secondary">Hủy</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Client-side check: ngày bắt đầu phải nhỏ hơn ngày kết thúc
        document.querySelector('form').addEventListener('submit', function(e) {
            const start = new Date(document.getElementById('StartDate').value);
            const end = new Date(document.getElementById('EndDate').value);
            if (start > end) {
                e.preventDefault();
                alert('Ngày bắt đầu phải nhỏ hơn ngày kết thúc!');
            }
        });
    </script>
}
