@model IEnumerable<BusinessLogicLayer.DTOs.Admin.SemesterDto>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý Học Kỳ";

    int pageIndex = ViewBag.PageIndex ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    int totalRecords = ViewBag.Total ?? 0;
    int totalPages = (int)Math.Ceiling((double)totalRecords / pageSize);
    string search = ViewBag.Search ?? "";
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            showToast("@Html.Raw(TempData["SuccessMessage"])", "success");
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            showToast("@Html.Raw(TempData["ErrorMessage"])", "error");
        });
    </script>
}

<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999">
    <div id="toastNotification" class="toast align-items-center text-white border-0" role="alert">
        <div class="d-flex">
            <div id="toastMessage" class="toast-body"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="card-title mb-0">Danh sách Học Kỳ</h4>
                    <a asp-action="Create" asp-controller="Semester" class="btn btn-primary btn-sm">
                        <i class="mdi mdi-plus"></i> Thêm học kỳ
                    </a>
                </div>

                <!-- Search -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <form method="get">
                            <div class="input-group input-group-sm">
                                <input type="text" name="search" value="@search" class="form-control" placeholder="Tìm kiếm học kỳ..." />
                                <button type="submit" class="btn btn-outline-primary">Tìm kiếm</button>
                            </div>
                        </form>
                    </div>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Tên Học Kỳ</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày kết thúc</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var semester in Model.Select((s, index) => new { s, index }))
                                {
                                    <tr>
                                        <td>@(((pageIndex - 1) * pageSize) + semester.index + 1)</td>
                                        <td>@semester.s.Name</td>
                                        <td>@semester.s.StartDate.ToString("dd/MM/yyyy")</td>
                                        <td>@semester.s.EndDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-controller="Semester" asp-route-id="@semester.s.SemesterId" class="btn btn-outline-primary btn-sm">
                                                    <i class="mdi mdi-pencil"></i> Sửa
                                                </a>
                                              
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (totalPages > 1)
                    {
                        <nav aria-label="Pagination">
                            <ul class="pagination pagination-sm justify-content-center">
                                <li class="page-item @(pageIndex == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?pageIndex=@(pageIndex - 1)&search=@search">
                                        <i class="mdi mdi-chevron-left"></i>
                                    </a>
                                </li>

                                @{
                                    var startPage = Math.Max(1, pageIndex - 2);
                                    var endPage = Math.Min(totalPages, pageIndex + 2);
                                }

                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == pageIndex ? "active" : "")">
                                        @if (i == pageIndex)
                                        {
                                            <span class="page-link">@i</span>
                                        }
                                        else
                                        {
                                            <a class="page-link" href="?pageIndex=@i&search=@search">@i</a>
                                        }
                                    </li>
                                }

                                <li class="page-item @(pageIndex == totalPages ? "disabled" : "")">
                                    <a class="page-link" href="?pageIndex=@(pageIndex + 1)&search=@search">
                                        <i class="mdi mdi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="mdi mdi-calendar-remove-outline display-1 text-muted mb-3"></i>
                        <h4>Không có học kỳ nào</h4>
                        @if (!string.IsNullOrEmpty(search))
                        {
                            <p class="text-muted">Không tìm thấy học kỳ với từ khóa "@search".</p>
                        }
                        else
                        {
                            <p class="text-muted">Hiện tại chưa có học kỳ nào.</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card-title {
            font-weight: 500;
            color: #6c7293;
        }

        .btn-group .btn {
            margin-right: 4px;
        }

            .btn-group .btn:last-child {
                margin-right: 0;
            }

        .table th a {
            color: #6c7293;
            font-weight: 500;
        }

            .table th a:hover {
                color: #007bff;
            }
    </style>
}
<script>
    function showToast(message, type) {

        const toastEl = document.getElementById("toastNotification");
        const toastBody = document.getElementById("toastMessage");

        toastBody.innerText = message;

        // Reset màu
        toastEl.classList.remove("bg-success", "bg-danger");

        // Gán màu theo loại
        if (type === "success") {
            toastEl.classList.add("bg-success");
        } else {
            toastEl.classList.add("bg-danger");
        }

        // Cấu hình tự tắt sau 3 giây
        const toast = new bootstrap.Toast(toastEl, {
            delay: 3000,
            autohide: true
        });

        toast.show();
    }


</script>
