@model List<BusinessLogicLayer.DTOs.StudentClassDto>

@{
    ViewData["Title"] = "Danh sách lớp của tôi";

    int page = ViewBag.Page ?? 1;
    int pageSize = 10;
    int totalRecords = ViewBag.TotalRecords ?? Model.Count;
    int totalPages = (int)Math.Ceiling((double)totalRecords / pageSize);

    string search = ViewBag.Search ?? "";
    string from = ViewBag.From != null ? ((DateTime)ViewBag.From).ToString("yyyy-MM-dd") : "";
    string to = ViewBag.To != null ? ((DateTime)ViewBag.To).ToString("yyyy-MM-dd") : "";
}

<h2 class="mt-3">Danh sách lớp của tôi</h2>

<!-- Filter Form -->
<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <input type="text" name="search" class="form-control" placeholder="Tìm môn, giáo viên, lớp..." value="@search" />
    </div>

    <div class="col-md-3">
        <input type="date" name="from" class="form-control" value="@from" />
    </div>

    <div class="col-md-3">
        <input type="date" name="to" class="form-control" value="@to" />
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-search"></i> Lọc
        </button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Lớp</th>
                <th>Môn học</th>
                <th>Giáo viên</th>
                <th>Kỳ học</th>
                <th>Thời gian</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var c in Model)
                {
                    <tr>
                        <td>@c.ClassName</td>
                        <td>@c.SubjectName</td>
                        <td>@c.TeacherName</td>
                        <td>@c.SemesterName</td>
                        <td>@c.StartDate.ToString("dd/MM/yyyy") - @c.EndDate.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Không có dữ liệu để hiển thị</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">

            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link" href="?page=@(page - 1)&search=@search&from=@from&to=@to">«</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@search&from=@from&to=@to">@i</a>
                </li>
            }

            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <a class="page-link" href="?page=@(page + 1)&search=@search&from=@from&to=@to">»</a>
            </li>
        </ul>
    </nav>
}
