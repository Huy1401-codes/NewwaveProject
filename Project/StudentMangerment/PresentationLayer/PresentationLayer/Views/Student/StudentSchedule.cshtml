@model List<BusinessLogicLayer.DTOs.StudentScheduleDto>

<h2 class="mt-3">Lịch học</h2>

<form method="get" class="row mb-3">

    <div class="col-md-3">
        <select class="form-select" name="dayOfWeek">
            <option value="">Chọn thứ</option>
            @for (int i = 2; i <= 8; i++)
            {
                <option value="@i" selected="@(ViewBag.Day == i)">Thứ @i</option>
            }
        </select>
    </div>

    <div class="col-md-5">
        <input name="search" class="form-control" value="@ViewBag.Search" placeholder="Tìm môn, lớp, GV..." />
    </div>

    <div class="col-md-2">
        <button class="btn btn-primary w-100">Lọc</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Thứ</th>
            <th>Lớp</th>
            <th>Môn</th>
            <th>Giáo viên</th>
            <th>Giờ</th>
            <th>Phòng</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var s in Model)
        {
            <tr>
                <td>Thứ @s.DayOfWeek</td>
                <td>@s.ClassName</td>
                <td>@s.SubjectName</td>
                <td>@s.TeacherName</td>
                <td>@s.StartTime - @s.EndTime</td>
                <td>@s.Room</td>
            </tr>
        }
    </tbody>
</table>
