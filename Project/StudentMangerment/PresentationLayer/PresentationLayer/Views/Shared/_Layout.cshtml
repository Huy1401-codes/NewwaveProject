@inject IHttpContextAccessor HttpContextAccessor
@{
    var ctx = HttpContextAccessor.HttpContext;
    var role = ctx?.Session.GetString("Role");
    var username = ctx?.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">StudentManagement</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMenu">

                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @* ADMIN *@
                        @if (role == "Admin")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Quản lý người dùng</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Role" asp-action="Index">Quản lý vai trò</a></li>
                        }

                        @* TEACHER *@
                        @if (role == "Teacher")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Teacher" asp-action="Index">Teacher Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Course" asp-action="Index">Khoá học</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Grade" asp-action="Index">Nhập điểm</a></li>
                        }

                        @* STUDENT *@
                        @if (role == "Student")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Index">Student Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Course" asp-action="MyCourses">Khoá học của tôi</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Grade" asp-action="MyGrades">Kết quả học tập</a></li>
                        }

                    </ul>

                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    Xin chào, @username (@role)
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Auth" asp-action="Logout">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auth" asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - StudentManagement
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
