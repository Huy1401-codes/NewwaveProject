@model List<BusinessLogicLayer.DTOs.Admin.ManagerClass.ClassDetailDto>

@{
    ViewData["Title"] = "Class Management";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Class Management</h2>
        <a href="@Url.Action("Create", "Class")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Class
        </a>
    </div>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Class Name</th>
                <th>Semester</th>
                <th>Subject</th>
                <th>Teacher</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No class available</td>
                </tr>
            }
            else
            {
                int index = 1;
                foreach (var c in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@c.ClassName</td>
                        <td>@c.SemesterName</td>
                        <td>@c.SubjectName</td>
                        <td>@c.TeacherName</td>                  

                        <td>
                            <a href="@Url.Action("Edit", "Class", new { id = c.ClassId })"
                               class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>

                            <a href="@Url.Action("Delete", "Class", new { id = c.ClassId })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this class?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                    index++;
                }
            }
        </tbody>
    </table>
</div>
