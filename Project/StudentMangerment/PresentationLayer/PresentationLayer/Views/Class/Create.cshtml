@model BusinessLogicLayer.DTOs.Admin.ManagerClass.ClassCreateDto

@{
    ViewData["Title"] = "Create New Class";
}

<div class="container mt-4">

    <h2 class="fw-bold mb-3">Create New Class</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <!-- Class Name -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Class Name</label>
            <input asp-for="ClassName" class="form-control" placeholder="Enter class name" />
            <span asp-validation-for="ClassName" class="text-danger"></span>
        </div>

        <!-- Semester -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Semester</label>
            <select asp-for="SemesterId" class="form-control" asp-items="ViewBag.Semesters">
                <option value="">-- Select Semester --</option>
            </select>
            <span asp-validation-for="SemesterId" class="text-danger"></span>
        </div>

        <!-- Subject -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Subject</label>
            <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects">
                <option value="">-- Select Subject --</option>
            </select>
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>

        <!-- Teacher -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Teacher</label>
            <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teachers">
                <option value="">-- Select Teacher --</option>
            </select>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>

        <!-- Import Students Excel -->
        <div class="mb-3">
            <label class="form-label fw-semibold">Import Students (Excel)</label>
            <input asp-for="StudentExcelFile" type="file" class="form-control" accept=".xlsx" />
            <span asp-validation-for="StudentExcelFile" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Create
        </button>
        <a href="@Url.Action("Index", "Class")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
